# ============================================
# HETZNER PRODUCTION ENVIRONMENT VARIABLES
# ============================================
# Bu dosyayı .env.production olarak kopyalayın ve değerleri doldurun
# cp env.production.example .env.production

# ============================================
# SERVER CONFIGURATION
# ============================================
# Hetzner sunucunuzun IP adresi veya domain adı
# Örnek: HETZNER_IP=46.62.254.131 veya HETZNER_IP=yourdomain.com
HETZNER_IP=YOUR_SERVER_IP_OR_DOMAIN

# ============================================
# PORT CONFIGURATION
# ============================================
API_GATEWAY_PORT=8000
FRONTEND_PORT=3000
AUTH_SERVICE_PORT=8006
APRAG_SERVICE_PORT=8007
MODEL_INFERENCE_PORT=8002
DOCUMENT_PROCESSOR_PORT=8003
CHROMADB_PORT=8004
DOCSTRANGE_PORT=8005
RERANKER_SERVICE_PORT=8008
MARKER_API_PORT=8090
OLLAMA_PORT=11434

# ============================================
# CORS CONFIGURATION
# ============================================
# Hetzner sunucunuzun IP/domain'ini ekleyin
# Birden fazla origin için virgülle ayırın
CORS_ORIGINS=http://YOUR_SERVER_IP:3000,http://YOUR_SERVER_IP:8000,http://YOUR_SERVER_IP:8006,http://YOUR_SERVER_IP:8007,https://YOUR_DOMAIN

# ============================================
# FRONTEND URLS (Browser için)
# ============================================
# Browser'dan erişim için external URL'ler
NEXT_PUBLIC_API_URL=http://YOUR_SERVER_IP:8000
NEXT_PUBLIC_AUTH_URL=http://YOUR_SERVER_IP:8006

# Domain kullanıyorsanız:
# NEXT_PUBLIC_API_URL=https://api.yourdomain.com
# NEXT_PUBLIC_AUTH_URL=https://auth.yourdomain.com

# ============================================
# SECURITY - CRITICAL!
# ============================================
# JWT Secret Key - MUTLAKA DEĞİŞTİRİN!
# Güvenli bir key oluşturmak için: openssl rand -hex 32
JWT_SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING

# ============================================
# API KEYS
# ============================================
# Alibaba/DashScope API Key
ALIBABA_API_KEY=your-alibaba-api-key
DASHSCOPE_API_KEY=your-dashscope-api-key

# Groq API Key (optional)
GROQ_API_KEY=your-groq-api-key

# HuggingFace API Key (optional)
HUGGINGFACE_API_KEY=your-huggingface-api-key

# OpenRouter API Key (optional)
OPENROUTER_API_KEY=your-openrouter-api-key

# DeepSeek API Key (optional)
DEEPSEEK_API_KEY=your-deepseek-api-key

# DocStrange API Key
DOCSTRANGE_API_KEY=your-docstrange-api-key

# ============================================
# MODEL CONFIGURATION
# ============================================
# Default embedding model
DEFAULT_EMBEDDING_MODEL=text-embedding-v4

# Reranker type: alibaba, bge, or ms-marco
RERANKER_TYPE=alibaba

# ============================================
# FEATURE FLAGS
# ============================================
NEXT_PUBLIC_AUTH_ENABLED=true
NEXT_PUBLIC_DEMO_MODE=false

# ============================================
# DATABASE CONFIGURATION
# ============================================
# SQLite database path (container içinde)
DATABASE_PATH=/app/data/rag_assistant.db

# ============================================
# ENVIRONMENT
# ============================================
NODE_ENV=production
DOCKER_ENV=true

